" Enable system clipboard
set clipboard=unnamedplus

" Line numbers
set number
set relativenumber

" Syntax highlighting
syntax on

" Auto-indentation
set smartindent
set autoindent
set tabstop=4
set shiftwidth=4
set expandtab

" Search options
set ignorecase
set smartcase
set incsearch
set hlsearch

" Enable mouse support
set mouse=a

" Better backspace behavior
set backspace=indent,eol,start

" Enable filetype plugins
filetype plugin on
filetype indent on
